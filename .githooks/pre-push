#!/bin/sh
command -v git-lfs >/dev/null 2>&1 || { echo >&2 "\nnot found git-lfs, If you no longer wish to use git-lfs, remove this hook by deleting .githooks/pre-push.\n"; exit 2; }
git lfs pre-push "$@"

SCRIPTS_DIR="$(git rev-parse --show-toplevel)/.githooks/pre-commit"

sh $SCRIPTS_DIR

result=$?
if(($result != 0)); then
    echo "error"
    exit $result
fi